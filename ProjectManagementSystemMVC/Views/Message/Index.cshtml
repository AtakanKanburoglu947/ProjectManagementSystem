@{
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}
<div class="mt-4">
    <h6>Mesaj Gönder</h6>
    <form asp-action="SendMessage" asp-controller="Message" method="post" enctype="multipart/form-data">
        <input type="email" class="form-control" name="email" placeholder="E-mail"/> <br />
        <input type="text" class="form-control" name="name" placeholder="Ad" /> <br />

        <div class="mb-3">
            <textarea class="form-control" name="content" placeholder="Mesaj" rows="3"></textarea>
        </div>

   
        <button type="submit" class="btn btn-secondary">Gönder</button>
    </form>
</div>
@if (TempData["Message"] != null)
{
    <script>
        alert('@Html.Raw(TempData["Message"])');
    </script>
}