@{
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}
@model ProjectManagementSystemMVC.Models.ProjectPageModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Card for Project Details -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">@Model.Name</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="card-title">Proje Açıklaması</h6>
                        <p class="card-text">@Model.Description</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="card-title">Proje Durumu</h6>
                        <p class="card-text">@Model.Status</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="card-title">Proje Versiyonu</h6>
                        <p class="card-text">@Model.Version</p>
                    </div>
                    <div class="mt-4">
                        <h6 class="card-title">Proje Yöneticileri</h6>
                        <ul class="list-group">
                            @foreach (var item in Model.ManagerIdentities)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.UserName
                                    <span class="badge bg-secondary">Yönetici</span>
                                </li>
                            }
                        </ul>
                    </div>
                    @if (Model.UserIdentities != null)
                    {
                        <div class="mt-4">
                            <h6 class="card-title">Proje Üyeleri</h6>
                            <ul class="list-group">
                                @foreach (var item in Model.UserIdentities)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @item.UserName
                                        <span class="badge bg-secondary">Üye</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="mt-4">
                        <h6>Yorum Ekle</h6>
                        <form asp-action="AddComment" asp-controller="Project" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="ProjectId" value="@Model.Id" />

                            <div class="mb-3">
                                <textarea class="form-control" id="commentText" name="NewComment.Text" rows="3"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="commentAttachment" class="form-label">Ek Dosya</label>
                                <input class="form-control" type="file" id="commentAttachment" name="File" />
                            </div>

                            <button type="submit" class="btn btn-primary">Yorum Ekle</button>
                        </form>
                    </div>
                    @if (Model.CommentDetails !=null)
                    {


                        <div class="mt-4">
                            <h6>Yorumlar</h6>
                            @foreach (var comment in Model.CommentDetails)
                            {

                                <div class="card mb-2">
                                    <div class="card-header">

                                        <p class="card-subtitle mb-2 text-muted">@comment.ProjectName</p>
                                        <small class="text-muted">Yorum Yapan: @comment.UserName</small>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">@comment.Text</p>
                                        @if (comment.FileId != null)
                                        {
                                            <small class="text-muted">Ek Dosya</small>
                                            <div class="col-md-2 mb-2">
                                                <div class="card text-center">
                                                    <div class="card-body">
                                                        <h5 class="card-title">@comment.FileName</h5>
                                                        <a class="btn btn-primary mt-3" asp-action="Download" asp-controller="Account" asp-route-id="@comment.FileId">
                                                            Yükle
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
