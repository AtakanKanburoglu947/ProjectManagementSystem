@{
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}
@model ProjectManagementSystemCore.Dtos.PasswordDto
<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="OldPassword">Eski Şifre</label>
        <input asp-for="OldPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">Yeni Şifre</label>
        <input asp-for="NewPassword" class="form-control" , type="password" />
    </div>
    <br />
    <button type="submit" class="btn btn-secondary" style="width:100%">Değiştir</button>
</form>

@if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <br />
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState["password"].Errors)
        {
            <div class="alert">@error.ErrorMessage</div>
        }
    </div>
}
@if (!string.IsNullOrEmpty((string)ViewData["Message"]))
{
    <br />
    <div class="alert alert-success">@ViewData["Message"]</div>
}