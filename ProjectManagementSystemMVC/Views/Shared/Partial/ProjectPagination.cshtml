@{
}
@model PaginationViewModel
<ul class="pagination">
    @if (Model.Count > 5)
    {
        int count = (Model.Count / 5);

        for (int i = 0; i <= count; i++)
        {
            if (i == (int)ViewData["startIndex"])
            {
                <li class="page-item active"><a class="page-link" asp-action="Index" asp-route-startIndex ="@i" 
                    asp-route-projectId="@((Guid)ViewData["projectId"])">@(i + 1)</a></li>

            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-startIndex="@i" asp-route-projectId="@((Guid)ViewData["projectId"])">@(i + 1)</a></li>

            }

        }
    }


</ul>